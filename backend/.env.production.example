# ============================================
# ADNFLIX PRODUCTION ENVIRONMENT
# ============================================
# Copy this file to .env on your production server
# Replace all placeholder values with your actual credentials

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# ============================================
# DATABASE CONFIGURATION (Aiven MySQL)
# ============================================
DB_HOST=your-mysql-host.aivencloud.com
DB_PORT=24641
DB_USER=avnadmin
DB_PASSWORD=REPLACE_WITH_YOUR_AIVEN_PASSWORD
DB_NAME=adnflix
DB_SSL=true

# ============================================
# SECURITY CONFIGURATION
# ============================================
# Generate with: node -e "console.log(require('crypto').randomBytes(48).toString('base64'))"
JWT_SECRET=REPLACE_WITH_64_CHAR_RANDOM_STRING
JWT_EXPIRES_IN=7d
SESSION_SECRET=REPLACE_WITH_64_CHAR_RANDOM_STRING

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ORIGINS=https://coliningram.site,https://www.coliningram.site

# ============================================
# FILE STORAGE CONFIGURATION
# ============================================
VIDEO_STORAGE_PATH=./storage/videos
MAX_VIDEO_SIZE=5368709120
