# ADNFLIX Backend - PRODUCTION Environment
# Production deployment at api.YOUR_DOMAIN

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=production
PORT=3000

# ============================================
# DATABASE CONFIGURATION (Production MySQL)
# ============================================
# Create in Production -> MySQL Databases
# 1. Create a database (e.g., colining_adnflix)
# 2. Create a user (e.g., colining_adnuser)  
# 3. Add user to database with ALL PRIVILEGES
DB_HOST=localhost
DB_PORT=3306
DB_USER=colining_adnflix
DB_PASSWORD=YOUR_DATABASE_PASSWORD_HERE
DB_NAME=colining_adnflix

# ============================================
# SECURITY CONFIGURATION
# ============================================
# IMPORTANT: Generate secure random strings!
# Run: node -e "console.log(require('crypto').randomBytes(48).toString('base64'))"
JWT_SECRET=YOUR_64_CHAR_JWT_SECRET_HERE
JWT_EXPIRES_IN=7d
SESSION_SECRET=YOUR_64_CHAR_SESSION_SECRET_HERE

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ORIGINS=https://YOUR_DOMAIN,https://www.YOUR_DOMAIN

# ============================================
# FILE STORAGE CONFIGURATION
# ============================================
VIDEO_STORAGE_PATH=./storage/videos
MAX_VIDEO_SIZE=5368709120
