# ADNFLIX Backend Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# ============================================
# DATABASE CONFIGURATION (Aiven MySQL)
# ============================================
DB_HOST=mysql-xxxxx.aivencloud.com
DB_PORT=24641
DB_USER=avnadmin
DB_PASSWORD=your_aiven_password
DB_NAME=adnflix
DB_SSL=true

# ============================================
# SECURITY CONFIGURATION
# ============================================
JWT_SECRET=your_super_long_random_secret_at_least_32_characters
JWT_EXPIRES_IN=7d
SESSION_SECRET=another_super_long_random_secret_string

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ORIGINS=https://coliningram.site,https://www.coliningram.site

# ============================================
# FILE STORAGE CONFIGURATION
# ============================================
VIDEO_STORAGE_PATH=./storage/videos
MAX_VIDEO_SIZE=5368709120
