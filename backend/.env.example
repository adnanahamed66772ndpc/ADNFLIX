# ADNFLIX Backend Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=development
PORT=3000

# ============================================
# DATABASE CONFIGURATION (MySQL)
# ============================================
# For MySQL: Create database in MySQL -> MySQL Databases
# Username format: MySQLuser_dbuser
# Database format: MySQLuser_dbname
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_MySQL_dbuser
DB_PASSWORD=your_db_password
DB_NAME=your_MySQL_dbname
# DB_SSL=false (not needed for localhost)

# ============================================
# SECURITY CONFIGURATION  
# ============================================
# Generate with: node -e "console.log(require('crypto').randomBytes(48).toString('base64'))"
JWT_SECRET=REPLACE_WITH_64_CHAR_RANDOM_STRING
JWT_EXPIRES_IN=7d
SESSION_SECRET=REPLACE_WITH_64_CHAR_RANDOM_STRING

# ============================================
# CORS CONFIGURATION
# ============================================
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================
# CRON (subscription auto-expiry)
# ============================================
# Secret for /api/cron/expire-subscriptions (daily: downgrade expired paid plans to free)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# CRON_SECRET=your_random_secret

# ============================================
# FILE STORAGE CONFIGURATION
# ============================================
VIDEO_STORAGE_PATH=./storage/videos
MAX_VIDEO_SIZE=5368709120
