{
  "name": "adnflix-backend",
  "version": "1.0.0",
  "description": "ADNFLIX Backend API - Production Ready",
  "type": "module",
  "main": "src/server.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "NODE_ENV=production node src/server.js",
    "start:win": "set NODE_ENV=production && node src/server.js",
    "dev": "NODE_ENV=development node --watch src/server.js",
    "dev:win": "set NODE_ENV=development && node --watch src/server.js",
    "migrate": "node src/migrations/runMigrations.js",
    "migrate:prod": "NODE_ENV=production node src/migrations/runMigrations.js"
  },
  "keywords": [
    "streaming",
    "video",
    "api",
    "adnflix"
  ],
  "author": "ADNFLIX",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-session": "^1.17.3",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.6.5",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
